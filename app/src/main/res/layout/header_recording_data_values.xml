<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/list_header"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/headline"
        android:text="@string/hl_RecordingValues"
        style="@style/BlukiiHeading"/>

    <include layout="@layout/separator" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Offset"
            android:layout_gravity="center"
            android:textSize="15sp" />

        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="0"
            android:layout_gravity="center"
            android:ems="10"
            android:layout_marginLeft="16dp"
            android:id="@+id/et_recording_data_read_offset" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_recording_data_read_all"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="All" />

        <Button
            android:id="@+id/btn_recording_data_read_offset"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Offset" />

        <Button
            android:id="@+id/btn_recording_data_read_one"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="One" />

        <ImageButton
            android:id="@+id/btn_recording_data_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_delete" />

    </LinearLayout>

    <include layout="@layout/separator" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Values"
        android:textSize="15sp" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:id="@+id/progressBar"
        android:indeterminate="false"
        android:max="100"
        android:progress="0"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/0"
        android:textSize="12sp"
        android:id="@+id/progressTextView"/>

    <com.blukii.blukiichartlibrary.BlukiiLineChart
        android:id="@+id/chartAccelerometer"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp" />

    <com.blukii.blukiichartlibrary.BlukiiLineChart
        android:id="@+id/chartAltimeter"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp" />

    <com.blukii.blukiichartlibrary.BlukiiLineChart
        android:id="@+id/chartBattery"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp" />

    <com.blukii.blukiichartlibrary.BlukiiLineChart
        android:id="@+id/chartHumidity"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp" />

    <com.blukii.blukiichartlibrary.BlukiiLineChart
        android:id="@+id/chartLight"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp" />

    <com.blukii.blukiichartlibrary.BlukiiLineChart
        android:id="@+id/chartMagnetometer"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp" />

    <com.blukii.blukiichartlibrary.BlukiiLineChart
        android:id="@+id/chartStepDetection"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp" />

    <com.blukii.blukiichartlibrary.BlukiiLineChart
        android:id="@+id/chartTemperature"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp" />
</LinearLayout>
